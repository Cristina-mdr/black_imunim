{
  "compilerOptions": {
    "module": "ESNext",
    "target": "ESNext",
    "outDir": "dist",
    "rootDir": "./",
    "allowJs": true,
    "esModuleInterop": true,
    "noEmit": true,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "skipDefaultLibCheck": true,
    "allowImportingTsExtensions":true
  },
 "include": ["src", "index.test.ts", "src/index.ts"]
}

